					</postConstruct>
					<postConstruct name="addQuery">
						<arg>"label.facet_filetype_pdf"</arg>
						<arg>"filetype_s:pdf"</arg>
					</postConstruct>
					<postConstruct name="addQuery">
						<arg>"label.facet_filetype_others"</arg>
						<arg>"filetype_s:others"</arg>
					</postConstruct>
				</component>
			</arg>
		</postConstruct>
