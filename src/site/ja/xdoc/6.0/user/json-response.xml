                "tstamp": "1284739487887",
                "url": "http:\u002F\u002Fspeedtest.goo.ne.jp\u002F",
                "id": "http:\u002F\u002Fspeedtest.goo.ne.jp\u002F;type=au,docomo,pc,softbank",
